<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_blue"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingRight="0dp"
    android:paddingLeft="0dp">
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingRight="@dimen/padding_right"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar" />
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_centerVertical="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:measureWithLargestChild="false"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:layout_centerVertical="true">
            <TextView
                android:text="Введите SMS код"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textEnterSMSCodeTitle"
                android:layout_gravity="left"
                android:textSize="@dimen/h4_text_size"
                android:textColor="@color/description_message_color" />
            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="4.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:id="@+id/editSMSCodeOne"
                    android:typeface="sans"
                    android:numeric="integer"
                    android:textSize="@dimen/h1_text_size"
                    android:textColor="@color/bgr_white"
                    android:gravity="center_horizontal"
                    android:maxLength="1" />
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="0.1"
                    android:layout_height="fill_parent" />
                <EditText
                    android:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:id="@+id/editSMSCodeTwo"
                    android:typeface="sans"
                    android:numeric="integer"
                    android:textSize="@dimen/h1_text_size"
                    android:textColor="@color/bgr_white"
                    android:gravity="center_horizontal"
                    android:maxLength="1" />
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="0.1"
                    android:layout_height="fill_parent" />
                <EditText
                    android:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:id="@+id/editSMSCodeThree"
                    android:typeface="sans"
                    android:numeric="integer"
                    android:textSize="@dimen/h1_text_size"
                    android:textColor="@color/bgr_white"
                    android:gravity="center_horizontal"
                    android:maxLength="1" />
                <RelativeLayout
                    android:layout_width="0px"
                    android:layout_weight="0.1"
                    android:layout_height="fill_parent" />
                <EditText
                    android:inputType="numberDecimal"
                    android:layout_width="0dp"
                    android:layout_weight="1.0"
                    android:layout_height="wrap_content"
                    android:id="@+id/editSMSCodeFour"
                    android:typeface="sans"
                    android:numeric="integer"
                    android:textSize="@dimen/h1_text_size"
                    android:textColor="@color/bgr_white"
                    android:gravity="center_horizontal"
                    android:maxLength="1" />
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/error_message_block_height"
                android:id="@+id/smsCodeVM"
                android:textColor="@color/statusbar_red"
                android:textSize="@dimen/h4_text_size"
                android:typeface="sans"
                android:textStyle="normal"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/layoutResendSMS"
                    android:orientation="horizontal"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="6dp">
                    <TextView
                        android:text="ОТПРАВИТЬ SMS ПОВТОРНО"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:id="@+id/textResendSMSTitle"
                        android:textColor="@color/submit_button_color"
                        android:textSize="@dimen/h3_text_size"
                        android:layout_marginLeft="4dp"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="20dp" />
                </LinearLayout>
            </RelativeLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="12dp">
                    <ImageView
                        android:layout_height="24dp"
                        android:layout_width="24dp"
                        android:src="@mipmap/info_white"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="4dp" />
                </RelativeLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="4dp"
                    android:layout_height="match_parent" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/textRegisterPhoneDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/description_message_color"
                        android:typeface="sans"
                        android:text="Подтверждая свой номер телефона, Вы даете согласие на обработку персональных данных."
                        android:layout_gravity="left"
                        android:textSize="@dimen/h3_text_size" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">
        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left"
            android:paddingRight="@dimen/padding_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">
            <TextView
                android:id="@+id/textCodeDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/description_message_color"
                android:layout_gravity="left"
                android:textSize="@dimen/h3_text_size" />
            <EditText
                android:id="@+id/editBonusCode"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/h2_text_size"
                android:textColor="@color/bgr_white" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/error_message_block_height"
                android:id="@+id/bonusCodeVM"
                android:textColor="@color/statusbar_red"
                android:textSize="@dimen/h4_text_size"
                android:typeface="sans"
                android:textStyle="normal"
                android:textAllCaps="true"
                android:gravity="center"
                android:layout_gravity="center_horizontal" />
        </LinearLayout>
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/progressBarStyle"
            android:indeterminateDrawable="@drawable/circular_progress_bar"
            android:visibility="gone"
            android:layout_gravity="center" />
        <Button
            android:id="@+id/buttonSave"
            android:gravity="center"
            android:background="@color/submit_button_color"
            android:typeface="sans"
            android:textColor="@color/bgr_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:textAllCaps="true"
            android:layout_gravity="center" />
    </LinearLayout>
</RelativeLayout>