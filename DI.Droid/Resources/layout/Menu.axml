<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_bottom">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bottom"
        android:background="@color/actionbar_blue"
        android:weightSum="5">
        <RelativeLayout
            android:id="@+id/layoutMain"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px">
            <ImageView
                android:id="@+id/imageViewMain"
                android:src="@mipmap/ic_list"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:text="Главная"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textMain"
                android:layout_below="@id/imageViewMain"
                android:textSize="@dimen/h4_text_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/bgr_white" />
            <LinearLayout
                android:id="@+id/selectorMain"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/submit_button_color"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutPolicies"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px">
            <ImageView
                android:id="@+id/imageViewPolicies"
                android:src="@mipmap/ic_polises"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:text="Полисы"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textPolicies"
                android:layout_below="@id/imageViewPolicies"
                android:textSize="@dimen/h4_text_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/bgr_white" />
            <LinearLayout
                android:id="@+id/selectorPolicies"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/submit_button_color"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutBonuses"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px">
            <ImageView
                android:id="@+id/imageViewBonuses"
                android:src="@mipmap/ic_star"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:text="Бонусы"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textBonuses"
                android:layout_below="@id/imageViewBonuses"
                android:textSize="@dimen/h4_text_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/bgr_white" />
            <LinearLayout
                android:id="@+id/selectorBonuses"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/submit_button_color"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutUsefull"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px">
            <ImageView
                android:id="@+id/imageViewUsefull"
                android:src="@mipmap/ic_useful"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:text="Полезное"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textUsefull"
                android:layout_below="@id/imageViewUsefull"
                android:textSize="@dimen/h4_text_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/bgr_white" />
            <LinearLayout
                android:id="@+id/selectorUsefull"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/submit_button_color"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/layoutProfile"
            android:layout_width="0px"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:minWidth="25px"
            android:minHeight="25px">
            <ImageView
                android:id="@+id/imageViewProfile"
                android:src="@mipmap/ic_more"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="2dp" />
            <TextView
                android:text="Еще"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textProfile"
                android:layout_below="@id/imageViewProfile"
                android:textSize="@dimen/h4_text_size"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="2dp"
                android:textColor="@color/bgr_white" />
            <LinearLayout
                android:id="@+id/selectorProfile"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/submit_button_color"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/layoutNotifications"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-3dp">
        <ImageView
            android:src="@mipmap/pass_item_filled"
            android:id="@+id/imageViewNotification"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNotificationsCounter"
            android:textSize="@dimen/h5_text_size"
            android:textColor="@color/bgr_white"
            android:layout_centerInParent="true" />
    </RelativeLayout>
</RelativeLayout>