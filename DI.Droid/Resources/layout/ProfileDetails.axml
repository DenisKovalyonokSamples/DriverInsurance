<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_blue"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingRight="0dp"
    android:paddingLeft="0dp">
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingRight="@dimen/padding_right"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/progressBarLoading"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="24dip"
            android:maxHeight="24dip"
            android:visibility="gone"
            android:indeterminateOnly="true"
            style="?android:attr/progressBarStyleHorizontal" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutPolicyTabs"
            android:weightSum="1.5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonDriverTab"
                android:gravity="center"
                android:textSize="@dimen/h3_text_size"
                android:typeface="sans"
                android:background="@color/actionbar_blue"
                android:textColor="@color/bgr_white"
                android:paddingTop="14dp"
                android:paddingBottom="12dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="@dimen/tabs_height"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:text="ВОДИТЕЛЬ" />
            <Button
                android:id="@+id/buttonCarsTab"
                android:gravity="center"
                android:textSize="@dimen/h3_text_size"
                android:typeface="sans"
                android:background="@color/actionbar_blue"
                android:textColor="@color/bgr_white"
                android:paddingTop="14dp"
                android:paddingBottom="12dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="@dimen/tabs_height"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:text="АВТОМОБИЛЬ" />
            <Button
                android:id="@+id/buttonTelematicsTab"
                android:gravity="center"
                android:textSize="@dimen/h3_text_size"
                android:typeface="sans"
                android:background="@color/actionbar_blue"
                android:textColor="@color/bgr_white"
                android:paddingTop="14dp"
                android:paddingBottom="12dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="@dimen/tabs_height"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:text="ТЕЛЕМАТИКА" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutFullTabSelectors"
            android:weightSum="1.5"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp">
            <LinearLayout
                android:id="@+id/selectorDriverTab"
                android:orientation="horizontal"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="3dp"
                android:background="@color/submit_button_color" />
            <LinearLayout
                android:id="@+id/selectorCarTab"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="3dp"
                android:background="@color/submit_button_color" />
            <LinearLayout
                android:id="@+id/selectorTelematicsTab"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="3dp"
                android:background="@color/submit_button_color" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/layoutWithoutPolicyTabs"
            android:visibility="gone"
            android:weightSum="1.0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/buttonWithoutDriverTab"
                android:gravity="center"
                android:textSize="@dimen/h3_text_size"
                android:typeface="sans"
                android:background="@color/actionbar_blue"
                android:textColor="@color/bgr_white"
                android:paddingTop="14dp"
                android:paddingBottom="12dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="@dimen/tabs_height"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:text="ВОДИТЕЛЬ" />
            <Button
                android:id="@+id/buttonWithoutCarsTab"
                android:gravity="center"
                android:textSize="@dimen/h3_text_size"
                android:typeface="sans"
                android:background="@color/actionbar_blue"
                android:textColor="@color/bgr_white"
                android:paddingTop="14dp"
                android:paddingBottom="12dp"
                android:layout_weight=".5"
                android:layout_width="0dip"
                android:layout_height="@dimen/tabs_height"
                android:textAllCaps="true"
                android:layout_gravity="center"
                android:text="АВТОМОБИЛЬ" />
        </LinearLayout>
      <LinearLayout
           android:orientation="horizontal"
           android:id="@+id/layoutWithoutTabSelectors"
           android:weightSum="1.0"
           android:visibility="gone"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="-3dp">
        <LinearLayout
            android:id="@+id/selectorWithoutDriverTab"
            android:orientation="horizontal"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:layout_height="3dp"
            android:background="@color/submit_button_color" />
        <LinearLayout
            android:id="@+id/selectorWithoutCarTab"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_weight=".5"
            android:layout_width="0dip"
            android:layout_height="3dp"
            android:background="@color/submit_button_color" />
      </LinearLayout>
        <FrameLayout
            android:id="@+id/fragmentContainer"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" />
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragmentMenu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bottom" />
</RelativeLayout>