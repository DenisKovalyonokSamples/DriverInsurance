<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_blue"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:paddingRight="0dp"
    android:paddingLeft="0dp">
    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:paddingRight="@dimen/padding_right"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:id="@+id/toolbar" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="@color/background_dark_blue"
                    android:minWidth="25px"
                    android:minHeight="25px">
                    <ImageView
                        android:src="@mipmap/logo"
                        android:layout_width="206dp"
                        android:layout_height="60dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="30dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="ТЕЛЕФОНЫ"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textPhonesTitle"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/h3_text_size"
                        android:textColor="@color/text_orange" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layoutLocalCall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp">
                    <RelativeLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/info_message_background"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:layout_height="18dp"
                                android:layout_width="18dp"
                                android:layout_marginRight="@dimen/list_item_icon_padding_right"
                                android:src="@mipmap/call_green"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp"
                            android:layout_centerVertical="true">
                            <TextView
                                android:id="@+id/localCallDescription"
                                android:text="Для звонков по России"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/content_gray"
                                android:typeface="sans"
                                android:layout_gravity="left"
                                android:textSize="@dimen/h4_text_size"
                                android:paddingTop="@dimen/list_item_main_section_text_padding_top"
                                android:singleLine="true" />
                            <TextView
                                android:id="@+id/localCallNumber"
                                android:text="8 800 555-66-77"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bgr_white"
                                android:typeface="sans"
                                android:layout_gravity="left"
                                android:textSize="@dimen/h3_text_size"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </RelativeLayout>
                    <RelativeLayout
                        android:id="@+id/layoutGlobalCall"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="77dp"
                        android:background="@drawable/info_message_background"
                        android:paddingBottom="10dp"
                        android:paddingTop="10dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp">
                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:layout_marginTop="2dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true">
                            <ImageView
                                android:layout_height="18dp"
                                android:layout_width="18dp"
                                android:layout_marginRight="@dimen/list_item_icon_padding_right"
                                android:src="@mipmap/call_green"
                                android:scaleType="fitCenter"
                                android:layout_gravity="center"
                                android:layout_centerVertical="true" />
                        </RelativeLayout>
                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingBottom="4dp"
                            android:paddingLeft="12dp"
                            android:paddingRight="12dp"
                            android:paddingTop="4dp">
                            <TextView
                                android:id="@+id/globalCallDescription"
                                android:text="Для звонков из других стран"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/content_gray"
                                android:typeface="sans"
                                android:layout_gravity="left"
                                android:textSize="@dimen/h4_text_size"
                                android:paddingTop="@dimen/list_item_main_section_text_padding_top"
                                android:singleLine="true" />
                            <TextView
                                android:id="@+id/globalCallNumber"
                                android:text="+7 (495) 645-66-77"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/bgr_white"
                                android:typeface="sans"
                                android:layout_gravity="left"
                                android:textSize="@dimen/h3_text_size"
                                android:textStyle="bold"
                                android:singleLine="true"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:visibility="gone"
                    android:minWidth="25px"
                    android:minHeight="25px">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="6dp">
                        <ImageView
                            android:id="@+id/imageViewVK"
                            android:src="@mipmap/vk"
                            android:layout_width="@dimen/icon_button_size"
                            android:layout_height="@dimen/icon_button_size" />
                        <ImageView
                            android:id="@+id/imageViewFB"
                            android:src="@mipmap/fb"
                            android:layout_width="@dimen/icon_button_size"
                            android:layout_height="@dimen/icon_button_size"
                            android:layout_marginLeft="10dp" />
                    </LinearLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">
                    <TextView
                        android:text="ОПИСАНИЕ"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textDescriptionTitle"
                        android:layout_centerInParent="true"
                        android:textSize="@dimen/h3_text_size"
                        android:textColor="@color/text_orange" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="20dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp">
                    <TextView
                        android:text="Описание технической поддержки для пользователей активировавших подписку за бонусные баллы."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/textDIDescriptionOne"
                        android:textColor="@color/bgr_white"
                        android:textSize="@dimen/h3_text_size" />
                    <TextView
                        android:text="Описание технической поддержки для пользователей активировавших подписку за бонусные баллы."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/textDIDescriptionOne"
                        android:id="@+id/textDIDescriptionTwo"
                        android:textColor="@color/bgr_white"
                        android:textSize="@dimen/h3_text_size" />
                    <TextView
                        android:text="Описание технической поддержки для пользователей активировавших подписку за бонусные баллы."
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_below="@+id/textDIDescriptionTwo"
                        android:id="@+id/textDIDescriptionThree"
                        android:textColor="@color/bgr_white"
                        android:textSize="@dimen/h3_text_size" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/fragmentMenu"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_bottom" />
</RelativeLayout>